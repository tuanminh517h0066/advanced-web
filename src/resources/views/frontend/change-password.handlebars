
<!--<div class="se-pre-con"></div>-->
<div class="theme-layout">
	
	<div class="topbar stick">
		<div class="logo">
			<a title="" href="/member/home"><img src="/frontend/images/tdt_logo.png" alt="" height="50px" width="auto"></a>
		</div>
		
		<div class="top-area">
			<div class="user-img">
				{{!-- <img class="dropdown-toggle" data-toggle="dropdown" src="/frontend/images/resources/admin.jpg" alt=""> --}}
				{{#if member.avatar }}
				<img src="/uploads/{{ member.avatar }}" class="dropdown-toggle" data-toggle="dropdown" alt="" height="60px" width="60px">
				{{else}}
				<img src="/frontend/images/user-avatar.png" class="dropdown-toggle" data-toggle="dropdown" alt="" height="60px" width="60px">
				{{/if}}
				<div class="dropdown-menu">  
					<a class="dropdown-item" href="/member/profile/{{ member._id }}"> <i class="fa fa-home"></i> My page</a>
					<a class="dropdown-item" href="/member/logout"> <i class="ti-power-off"></i> Logout</a>
				</div>  
			</div>
		</div>
	</div><!-- topbar -->
		
	<section>
		<div class="gap gray-bg">
			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-12">
						<div class="row" id="page-contents">
							
							<div class="col-lg-3">
								<aside class="sidebar static">
									<div class="widget">
										<h4 class="widget-title">Profile</h4>	
										
										<div class="your-page">
											{{#if member.avatar }}
											<img src="/uploads/{{ member.avatar }}" alt="" height="150px" width="150px">
											{{else}}
											<img src="/frontend/images/user-avatar.png" alt="" height="150px" width="150px">
											{{/if}}
											<br>
											<div class="page-meta">
												<a href="#" title="" class="underline">
													{{#if member  }}
														{{ member.username }}
													{{/if}}
												</a>
											</div>
											<input type="hidden" id="profile_member_id" value="{{ member._id }}">
										</div>
										<div class="widget"></div>
										<ul class="naves">
											<li>
												<i class="fas fa-home" ></i>
												<a href="/member/home" title="">home</a>
											</li>
											<li>
												<i class="fas fa-clipboard"></i>
												<a href="/member/profile/{{ member._id }}">My Page</a>
											</li>
											<li>
												<i class="fas fa-cogs"></i>
												<a href="/member/info-setting">Info setting</a>
											</li>
											
										</ul>
									</div>
									<!-- Shortcuts -->
								</aside>
							</div>		
							<!-- sidebar -->
							<div class="col-lg-9" style="padding-right: 60px;">
								
								<div class="central-meta">
                                    <div class="editing-info">
                                        <h5 class="f-title"><i class="ti-lock"></i>Change Password</h5>
										{{#if errors }}
											{{#each errors }}
												<p class="alert alert-danger">{{ this.msg }}</p>
											{{/each}}
										{{/if}}
										{{#if success }}
											{{#each success }}
												<p class="alert alert-success">{{ this.msg }}</p>
											{{/each}}
										{{/if}}
                                        <form method="post" action="/member/change-password/post">
										
                                            <div class="form-group">
												<label for="currentpw">Current Password</label>
												<input type="password" class="form-control" name="currentpw" placeholder="Enter current password">
											</div>
											<div class="form-group">
												<label for="newpw">New Password</label>
												<input type="password" class="form-control" name="newpw" placeholder="Enter new password">
											</div>
											<div class="form-group">
												<label for="confirmpw">Confirm Password</label>
												<input type="password" class="form-control" name="confirmpw" placeholder="Confirm password">
											</div>
                                            <div class="submit-btns">
                                                <button type="button" class="mtr-btn"><span>Cancel</span></button>
                                                <button type="submit" class="mtr-btn"><span>Update</span></button>
                                            </div>
                                        </form>
                                    </div>
                                </div>	
							</div><!-- centerl meta -->
							
						</div>	
					</div>
				</div>
			</div>
		</div>	
	</section>
</div>
	<div class="side-panel">
			<h4 class="panel-title">General Setting</h4>
			<form method="post">
				<div class="setting-row">
					<span>use night mode</span>
					<input type="checkbox" id="nightmode1"/> 
					<label for="nightmode1" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>Notifications</span>
					<input type="checkbox" id="switch22" /> 
					<label for="switch22" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>Notification sound</span>
					<input type="checkbox" id="switch33" /> 
					<label for="switch33" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>My profile</span>
					<input type="checkbox" id="switch44" /> 
					<label for="switch44" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>Show profile</span>
					<input type="checkbox" id="switch55" /> 
					<label for="switch55" data-on-label="ON" data-off-label="OFF"></label>
				</div>
			</form>
			<h4 class="panel-title">Account Setting</h4>
			<form method="post">
				<div class="setting-row">
					<span>Sub users</span>
					<input type="checkbox" id="switch66" /> 
					<label for="switch66" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>personal account</span>
					<input type="checkbox" id="switch77" /> 
					<label for="switch77" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>Business account</span>
					<input type="checkbox" id="switch88" /> 
					<label for="switch88" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>Show me online</span>
					<input type="checkbox" id="switch99" /> 
					<label for="switch99" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>Delete history</span>
					<input type="checkbox" id="switch101" /> 
					<label for="switch101" data-on-label="ON" data-off-label="OFF"></label>
				</div>
				<div class="setting-row">
					<span>Expose author name</span>
					<input type="checkbox" id="switch111" /> 
					<label for="switch111" data-on-label="ON" data-off-label="OFF"></label>
				</div>
			</form>
		</div><!-- side panel -->		
	
