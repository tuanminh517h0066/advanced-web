<div class="d-sm-flex justify-content-between align-items-start">
    <div>
    <h4 class="card-title card-title-dash">Notification Managment</h4>
    </div>
    
</div>
<div class="table-responsive  mt-1">
    <table class="table select-table">
    <thead>
        <tr>
        <th>No.</th>
        <th>department</th>
        <th>title</th>
        <th>description</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody>
      {{#each notifications}}
        <tr>
            <td>{{ sum @index 1 }}</td>
            <td>    
                <h6>{{this.department.name}}</h6>
            </td>
            <td>
                <p>{{ this.title }}</p>
            </td>
            <td>
                {{{ this.description }}}
            </td>
          
        <td>
          {{!-- <button type="button" class="btn btn-warning" style="color: white;">Edit</button> --}}
          {{!-- <button type="button" class="btn btn-danger" style="color: white;">Delete</button> --}}
          
          <a href="javascript:void(0)" class="btn btn-danger delete-notification" data-id="{{ this._id }}" style="color: white;">Delete</a>
        </td>
        </tr>
        {{/each}}
    </tbody>
    </table>

    <div class="modal" id="confirmDeleteNotification" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Notification</h5>
                {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span> --}}
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure to delete this notification.</p>
            </div>
            <form action="/admin/notification/delete" method="post">
            <div class="modal-footer">
                <input type="hidden" name="notification_id" id="notification-id">
                <button type="submit" class="btn btn-primary">Delete</button>
                <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
            </div>
            </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $(document).on('click','.delete-notification', function() {
            var notification_id = $(this).data('id');

            $('#confirmDeleteNotification').find('#notification-id').val(notification_id);
            $('#confirmDeleteNotification').modal('show');
        })

        $(document).on('click','.close-modal', function() {
            $('#confirmDeleteNotification').modal('hide');
        })
    })
</script>