<div class="d-sm-flex justify-content-between align-items-start">
    <div>
    <h4 class="card-title card-title-dash">Teacher Managment</h4>
    </div>
    <div>
    <a href="/admin/add1" class="btn btn-primary btn-lg text-white mb-0 me-0"><i class="mdi mdi-account-plus"></i>Add new teacher</a>
    
    </div>
</div>
<div class="table-responsive  mt-1">
    <table class="table select-table">
    <thead>
        <tr>
        <th>No.</th>
        <th>User name</th>
        <th>Role</th>
        <th>Department</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody>
      {{#each members}}
        <tr>
          <td>{{ sum @index 1 }}</td>
          <td>
                <div class="d-flex ">
                    {{#if this.avatar }}
                    <img src="/uploads/{{ this.avatar }}" alt="">
                    {{else}}
                    <img src="/frontend/images/user-avatar.png" alt="">
                    {{/if}}
                
                    <div>
                        <h6>{{this.email}}</h6>
                        <p>{{this.username}}</p>
                    </div>
              </div>
          </td>
          <td>
              <h6>{{ check_role this.role }}</h6>
              <!-- <p>company type</p> -->
          </td>
          <td>
              {{#each this.departments}}
              <h6>{{ this.name }}</h6>
              {{else}}
              <h6>Dont have</h6>
              {{/each}}
          </td>
        <td>
          {{!-- <button type="button" class="btn btn-warning" style="color: white;">Edit</button> --}}
          {{!-- <button type="button" class="btn btn-danger" style="color: #ffffff;">Delete</button> --}}
          <a href="/admin/member/edit/department/{{ this._id }}" class="btn btn-warning" style="color: white;">Edit</a>
          <a href="javascript:void(0)" class="btn btn-danger delete-member" data-id="{{ this._id }}" style="color: white;">Delete</a>
        </td>
        </tr>
        {{/each}}
    </tbody>
    </table>

    <div class="modal" id="confirmDeleteMember" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Member</h5>
                {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span> --}}
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure to delete this member.</p>
            </div>
            <form action="/admin/member/delete" method="post">
            <div class="modal-footer">
                <input type="hidden" name="member_id" id="member-id">
                <button type="submit" class="btn btn-primary">Delete</button>
                <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
            </div>
            </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $(document).on('click','.delete-member', function() {
            var member_id = $(this).data('id');

            $('#confirmDeleteMember').find('#member-id').val(member_id);
            $('#confirmDeleteMember').modal('show');
        })

        $(document).on('click','.close-modal', function() {
            $('#confirmDeleteMember').modal('hide');
        })
    })
</script>